{% extends 'base.html.twig' %}

{% block title %}Editeaza profilul{% endblock %}

{% block body %}
    <br>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('fail') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="page-content page-container" id="page-content">
        {{ form_start(form) }}
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Editeaza informatiile</h6>
                                    <div class="col">

                                        <div class="row-sm-6">
                                            <label>
                                                <b> Nume </b>
                                            </label>
                                            {{ form_widget(form.firstName, {'attr':{'class':'form-control'}}) }}
                                        </div>
                                        <div class="row-sm-6">
                                            <label>
                                                <b> Prenume </b>
                                            </label>
                                            {{ form_widget(form.lastName, {'attr':{'class':'form-control'}}) }}
                                        </div>
                                        <div class="row-sm-6">
                                            <label>
                                                <b> Email </b>
                                            </label>
                                            {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
                                        </div>
                                        <div class="row-sm-6">
                                            <label>
                                                <b> Grupa de sange </b>
                                            </label>
                                            {{ form_widget(form.bloodGroup, {'attr':{'class':'form-control form-select'}}) }}
                                        </div>
                                            {{ include('user/_form.html.twig', {'button_label': 'Salveaza'}) }}
                                        <br>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>

