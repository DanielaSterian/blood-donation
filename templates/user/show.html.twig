{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<br>
    <div class="page-content page-container" id="page-content">
        {% if(user != null) %}
            <div class="padding">
                <div class="row container d-flex justify-content-center">
                    <div class="col-xl-6 col-md-12">
                        <div class="card user-card-full">
                            <div class="row m-l-0 m-r-0">
                                <div class="col-sm-4 bg-c-lite-green user-profile">
                                </div>
                                <div class="col-sm-8">
                                    <div class="card-block">
                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Informations</h6>
                                        <div class="col">
                                            <div class="row-sm-6">
                                                <p class="m-b-10 f-w-600"><b>First Name</b></p>
                                                <h6 class="text-muted f-w-400">{{ user.firstName }}</h6>
                                            </div>
                                            <div class="row-sm-6">
                                                <p class="m-b-10 f-w-600"><b>Last Name</b></p>
                                                <h6 class="text-muted f-w-400">{{ user.lastName }}</h6>
                                            </div>
                                            <div class="row-sm-6">
                                                <p class="m-b-10 f-w-600"><b>Email</b></p>
                                                <h6 class="text-muted f-w-400">{{ user.email }}</h6>
                                            </div>
                                            <div class="row-sm-6">
                                                <p class="m-b-10 f-w-600"><b>Blood Group</b></p>
                                                <h6 class="text-muted f-w-400">{{ bloodGroup.name }}</h6>
                                            </div>
                                            <div class="row-sm-6">
                                                <a class="btn btn-danger btn-sm" name="update-user" href="{{ path('app_user_edit', {'id': user.id}) }}">
                                                    <i class="fa fa-edit" aria-hidden="true"></i> Edit profile
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
<br>


{% endblock %}
