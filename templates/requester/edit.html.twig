{% extends 'base.html.twig' %}

{% block title %}Edit Requester{% endblock %}

{% block body %}
    <h1>Edit Requester</h1>

    <div class="banner"></div>
    <br>

    <div class="container-fluid">
        <div class="card mx-auto" style="max-width: 40rem;">
            <div class="card-header" style="text-align: center;background-color: white; font-weight: bold; font-size: 18px">
                <span>Edit Request</span>
            </div>
            {{ form_errors(form) }}

            {{ form_start(form) }}
            <div class="card-body">
                {{ form_label(form.firstName, 'First Name') }}
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control mb-3'}}) }}

                {{ form_label(form.lastName, 'Last Name') }}
                {{ form_widget(form.lastName, {'attr': {'class': 'form-control mb-3'}}) }}

                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control mb-3'}}) }}

                {{ form_label(form.bloodGroup, 'Blood Group') }}
                {{ form_widget(form.bloodGroup, {'attr': {'class': 'form-select mb-3'}}) }}
            </div>
        </div>
    </div>

    </div>

    <div class="card-footer">
        <div class="row">
            <div class="col-6" style="text-align: start">
                <a class="btn btn-secondary" href="{{ path('app_requester_index') }}" type="button">Back</a>
            </div>
            <div class="col-6" style="text-align: end">
                {{ include('blood_group/_form.html.twig', {'button_label': 'Save'}) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    </div>
    </div>
