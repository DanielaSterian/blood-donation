{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="signup-form">
        {{ form_start(form) }}
        <h2>Register</h2>
        <p class="hint-text">Create your account. It's free and only takes a minute.</p>
        {{ form_errors(form) }}
        <!--Flash messages-->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('fail') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <!--End flash-->
        <div class="form-group">
            <div class="row">
                <div class="col">
                    {{ form_widget(form.First_Name, {'attr': {'class': 'form-control', 'placeholder':'First Name', 'type':'text'}}) }}
                </div>
                <div class="col">
                    {{ form_widget(form.Last_Name, {'attr': {'class': 'form-control', 'placeholder':'Last Name', 'type':'text'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            {{ form_widget(form.Email, {'attr': {'class': 'form-control', 'placeholder':'Email', 'type':'email'}}) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder':'Password', 'type':'password'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder':'Confirm Password', 'type':'password'}}) }}
        </div>
        <div class="form-group">
            <label class="form-check-label"><input type="checkbox" required="required"> I accept the <a href="#">Terms of Use</a> &amp; <a href="#">Privacy Policy</a></label>
        </div>
        <div class="form-group">
            {{ form_widget(form.Save, { 'label': 'Register Now', 'class':'btn btn-success btn-lg btn-block'}) }}
        </div>
        {{ form_end(form) }}
        <div class="text-center">Already have an account? <a href="#">Sign in</a></div>
    </div>
{% endblock %}
