{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('login') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('login') }}
    {% endblock %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->

            <!-- Icon -->
            <div class="fadeIn first">
                <img src="{{asset("/images/user-icon.png") }}" id="icon" alt="User Icon" />
            </div>

            <!-- Login Form -->
            <form method="post">
                <input type="email" id="inputEmail" class="fadeIn second" name="email" placeholder="email" value="{{ last_username }}">
                <input type="password" id="inputPassword" class="fadeIn third" name="password" placeholder="parola">
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <input type="submit" class="fadeIn fourth" value="Logare">
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="underlineHover" href="#">Ai uitat parola?</a>
            </div>

        </div>
    </div>



